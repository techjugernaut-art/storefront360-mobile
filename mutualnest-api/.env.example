# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mutualnest_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (for Email OTP)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@mutualnest.com
SENDGRID_FROM_NAME=MutualNest

# Redis Configuration (for OTP storage)
REDIS_URL=redis://localhost:6379

# GHLink API Configuration
GHLINK_API_URL=https://api.ghlink.com
GHLINK_API_KEY=your-ghlink-api-key
GHLINK_API_SECRET=your-ghlink-api-secret
GHLINK_WEBHOOK_SECRET=your-ghlink-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Points & Rewards Configuration
POINTS_PER_INVESTMENT=100
POINTS_PERCENTAGE=1
POINTS_DAILY_LOGIN=10
POINTS_WEEKLY_STREAK=50
POINTS_REFERRAL_SIGNUP=200
POINTS_FIRST_INVESTMENT=500

# Level Thresholds
LEVEL_BRONZE_MIN=0
LEVEL_SILVER_MIN=1000
LEVEL_GOLD_MIN=5000
LEVEL_PLATINUM_MIN=20000
